@model IEnumerable<EditorialMvc.Models.Usuario>

@{
    ViewData["Title"] = "Home Page";
}

<div class="row pb-3 backgroundWhite">
    @foreach (var libro in Model)
    {
        <div class="col-lg-3 col-md-6">
            <div class="row p-2">
                <div class="col-12  p-1" style="border:1px solid #008cba; border-radius: 5px;">
                    <div class="card" style="border:0px;">
                        <img src="@libro.Direccion" class="card-img-top rounded" height="400px" />
                        <div class="pl-1">
                            <p class="card-title h5"><b style="color:#2c3e50">@libro.Email</b></p>
                            <p class="card-title text-primary">por <b>@libro.Direccion</b></p>
                        </div>
                        <div style="padding-left:5px;">
                            <p>Precio: <strike><b class="">@libro.CompaniaId</b></strike></p>
                        </div>
                        <div style="padding-left:5px;">
                            <p style="color:maroon">Al por mayor: <b class="">@libro.CodigoPostal</b></p>
                        </div>
                    </div>
                    <div>
                        <a asp-action="Details" class="btn btn-primary form-control" asp-route-id="@libro.Id">Detalles</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>